{
  "name": "tiptop",
  "version": "1.0.0",
  "description": "AI-enhanced collaborative rich text editor built with Tiptap and Preact",
  "type": "module",
  "main": "dist/tiptop.js",
  "module": "dist/tiptop.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tiptap/core": "^2.1.13",
    "@tiptap/extension-blockquote": "^2.1.13",
    "@tiptap/extension-bold": "^2.1.13",
    "@tiptap/extension-bullet-list": "^2.1.13",
    "@tiptap/extension-code": "^2.26.1",
    "@tiptap/extension-code-block": "^2.1.13",
    "@tiptap/extension-collaboration": "^2.1.13",
    "@tiptap/extension-collaboration-cursor": "^2.1.13",
    "@tiptap/extension-color": "^2.1.13",
    "@tiptap/extension-document": "^2.1.13",
    "@tiptap/extension-heading": "^2.26.1",
    "@tiptap/extension-highlight": "^2.1.13",
    "@tiptap/extension-horizontal-rule": "^2.26.1",
    "@tiptap/extension-image": "^2.1.13",
    "@tiptap/extension-italic": "^2.1.13",
    "@tiptap/extension-link": "^2.1.13",
    "@tiptap/extension-list-item": "^2.1.13",
    "@tiptap/extension-ordered-list": "^2.1.13",
    "@tiptap/extension-paragraph": "^2.1.13",
    "@tiptap/extension-strike": "^2.1.13",
    "@tiptap/extension-subscript": "^2.1.13",
    "@tiptap/extension-superscript": "^2.1.13",
    "@tiptap/extension-text": "^2.1.13",
    "@tiptap/extension-text-align": "^2.1.13",
    "@tiptap/extension-text-style": "^2.1.13",
    "@tiptap/extension-underline": "^2.1.13",
    "@tiptap/pm": "^2.1.13",
    "@types/prismjs": "^1.26.5",
    "lucide-preact": "^0.294.0",
    "preact": "^10.19.3",
    "prismjs": "^1.30.0",
    "y-websocket": "^1.5.0",
    "yjs": "^13.6.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@preact/preset-vite": "^2.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/preact": "^3.2.3",
    "@types/node": "^20.10.5",
    "@vitest/ui": "^1.1.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "tailwindcss": "^4.0.0-alpha.25",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "rich-text-editor",
    "tiptap",
    "preact",
    "collaborative",
    "ai-enhanced",
    "typescript"
  ],
  "author": "Tiptop Team",
  "license": "MIT"
}
